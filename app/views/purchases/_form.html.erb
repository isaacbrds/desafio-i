<section class="py-5">
  <% @purchase.errors.each do |value| %>
  <div class="<%= flash_class('error') %>" role="alert">
    <%= value.message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <% end %>
  <%= form_with model: @purchase do |purchase_form| %>
    
    <h2>Materials</h2>
    
    <div id="purchase_items">
      <%= purchase_form.fields_for :purchase_items do |purchase_items_form| %>
        <div class="form-group">
          <%= render "purchase_item_fields", f: purchase_items_form %>
        </div>
      <% end %>

      <div class="links">
        <%= link_to_add_association t('add purchase items'), purchase_form, :purchase_items %>
      </div>
    </div>
    <br />
    <%= purchase_form.submit t('create'),class: "btn btn-primary" %>
  <% end %>
</section>