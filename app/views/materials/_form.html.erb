<% material.errors.each do |key, value| %>
<div class="<%= flash_class('error') %>" role="alert">
  <%= t("#{key}") %> <%= value %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% end %>
<%= form_with model: material do |form| %>
  <div class="form-group">
    <%= form.label :title %>  
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :quantity %>  
    <%= form.text_field :quantity , class: "form-control" %>
  </div>
  <div class="mt-2">  
    <%= form.submit t("send"), class: "btn btn-primary" %>
  </div>
<% end %>

<div class="pt-3">
  <%= link_to t('back'), materials_path %>
</div>