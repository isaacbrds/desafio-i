<section class="py-3">
  <table class="table">
    <th><%= t('Order Date') %></th>
    <th><%= t('Client') %></th>
    <th><%= t('Detail') %></th>
    <th colspan="3"> <%= link_to "#{t('new')} #{t('Order')}", new_order_path, 
      class: 'btn btn-success' %></th> 
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%d/%m/%Y') %></td>
      <td><%= order.user.email %></td>
      <td > <%= link_to t('show'), order_path(order),
        class: 'btn btn-info'  %> </td>
    </tr>
    <% end %>
  </table>
  
  <div class="text-center">
    <%= paginate @orders %>
  </div>  
</section>
