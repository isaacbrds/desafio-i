<section class="py-5">
  <h1><%= t('new') %> Order</h1>

  <% @order.errors.each do |key, value| %>
  <div class="<%= flash_class('error') %>" role="alert">
    <%= t("#{key}") %> <%= value %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <% end %>
  <%= form_with model: @order do |order_form| %>
    
    <h2>Materials</h2>
    
    <div id="order_items">
      <%= order_form.fields_for :order_items do |order_items_form| %>
        <div class="form-group">
          <%= render "order_item_fields", f: order_items_form %>
        </div>
      <% end %>

      <div class="links">
        <%= link_to_add_association t('add order items'), order_form, :order_items %>
      </div>
    </div>
    <br />
    <%= order_form.submit t('create'),class: "btn btn-primary" %>
  <% end %>
</section>